<%= stylesheet_link_tag    "application" %>
<%= javascript_include_tag "application" %>
<h1>Listing albums</h1>
 <div class="container">
  <div class="well">
    <%= link_to " Add New Albums", new_album_path, class: "btn btn-primary" %>
  
<%= form_tag(albums_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search albums" %>
      <button class="btn" type="submit"><i class="icon-search"></i>Search</button>
    </div>
  <% end %>
  <%= yield %>
 <div class="grid">
 <%= render partial: 'grid', title: { albums: @albums} %>
 </div>


